<table class="table table-hover">
  <thead>
  <tr>
    <th> <%= link_to 'Name', breweries_path(order:"name", name_asc:"#{session[:brewery_name_asc]}") %> </th>
    <th> <%= link_to 'Year', breweries_path(order:"year", year_asc:"#{session[:brewery_name_asc]}") %> </th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>