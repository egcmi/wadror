<h2>
  <strong><%= @style.name %></strong>
</h2>

<quote>
  <%= @style.description %>
</quote>

<h4>Beers</h4>

<% if @style.beers.empty? %>
<p>no beers for this style</p>
<% else %>
<ul>
 <% @style.beers.each do |beer| %>
   <li>
	<%= link_to beer, beer %>
   </li>
 <% end %>
</ul>
<% end %>

<%= edit_and_destroy_buttons(@style) %>